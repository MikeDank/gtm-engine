generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Campaign {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  signals   Signal[]
}

model Signal {
  id         String    @id @default(cuid())
  campaignId String?
  campaign   Campaign? @relation(fields: [campaignId], references: [id])
  source     String
  excerpt    String
  status     String    @default("pending")
  angle      String?
  capturedAt DateTime
  createdAt  DateTime  @default(now())
  lead       Lead?
}

model Lead {
  id          String       @id @default(cuid())
  name        String
  role        String?
  company     String?
  signalId    String?      @unique
  signal      Signal?      @relation(fields: [signalId], references: [id])
  createdAt   DateTime     @default(now())
  drafts      Draft[]
  touchpoints Touchpoint[]
}

model Draft {
  id          String       @id @default(cuid())
  leadId      String
  lead        Lead         @relation(fields: [leadId], references: [id], onDelete: Cascade)
  channel     String       // "email" | "linkedin"
  subject     String?      // for email only
  content     String
  variantKey  String       // e.g., "short_cold_opener_v1", "value_first_v1"
  angle       String?
  hypothesis  String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  touchpoints Touchpoint[]
}

model LlmSettings {
  id             String   @id @default("default")
  provider       String   @default("openai") // "openai" | "anthropic"
  model          String   @default("gpt-4o-mini")
  temperature    Float    @default(0.7)
  maxTokens      Int      @default(1024)
  dailyCostLimit Float    @default(10.0) // UI only, no enforcement yet
  updatedAt      DateTime @updatedAt
}

model ContextDoc {
  id        String   @id @default(cuid())
  type      String   // "signals" | "icp" | "tone"
  title     String?
  content   String
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([type, isActive])
}

model Touchpoint {
  id        String    @id @default(cuid())
  leadId    String
  lead      Lead      @relation(fields: [leadId], references: [id], onDelete: Cascade)
  channel   String    // "email" | "linkedin"
  draftId   String?
  draft     Draft?    @relation(fields: [draftId], references: [id], onDelete: SetNull)
  status    String    @default("planned") // "planned" | "sent"
  sentAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([leadId])
}
